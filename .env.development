# ========================================
# DEVELOPMENT ENVIRONMENT (Docker Local)
# ========================================
NODE_ENV=development

# ========================================
# DATABASE CONFIGURATION (Docker PostgreSQL)
# ========================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/userdb

# ========================================
# REDIS CONFIGURATION (Docker Redis)
# ========================================
REDIS_URL=redis://localhost:6379

# ========================================
# SERVICE CONFIGURATION
# ========================================
USER_SERVICE_PORT=3001
AUTH_SERVICE_PORT=3002
GATEWAY_PORT=3000

# ========================================
# SERVICE URLs (Local Docker)
# ========================================
USER_SERVICE_URL=http://localhost:3001
AUTH_SERVICE_URL=http://localhost:3002

# ========================================
# SECURITY CONFIGURATION
# ========================================
JWT_SECRET=dev-jwt-secret-key-not-for-production

# ========================================
# PERFORMANCE CONFIGURATION
# ========================================
REDIS_POOL_SIZE=20
USER_CACHE_TTL=60
SESSION_CACHE_TTL=3600

# ========================================
# RATE LIMITING (Development - More Lenient)
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50000

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=debug
